<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lovecoding.yangying.camera.EditPicCommentActivity"
    android:background="@color/colorWhite">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:inputType="textMultiLine"
            android:id="@+id/edit_pic_comment"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:maxLength="200"
            android:minLines="7"
            android:scrollbars="vertical"
            android:gravity="top"
            android:padding="3dp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/border_radius_all_only"/>
        <TextView
            android:id="@+id/text_pic_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="12dp"
            android:text="200"
            android:textColor="@color/colorLightGray"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_comment_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_margin="40dp"
            android:text="取消"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_comment_finish"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_margin="40dp"
            android:layout_gravity="right"
            android:text="发布"
            android:textSize="20sp"/>
    </FrameLayout>

</LinearLayout>
